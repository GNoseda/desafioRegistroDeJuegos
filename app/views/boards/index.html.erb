<p id="notice"><%= notice %></p>

<h1>Boards</h1>

<table>
  <thead>
    <tr>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.size %></td>
        <td><%= image_tag board.attach.variant(resize: '100x80') %></td>
        <td><%= link_to 'Show', game_board_path(@game, board) %></td>
        <td><%= link_to 'Edit', edit_game_board_path(@game, board) %></td>
        <td><%= link_to 'Destroy', game_board_path(@game, board), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_game_board_path %>
